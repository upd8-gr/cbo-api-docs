{
    "private": true,
    "devDependencies": {
        "@redocly/cli": "^2.18.1",
        "swagger-cli": "^4.0.4"
    },
   "scripts": {
        "openapi:bundle:v1": "npx @redocly/cli bundle openapi/v1/openapi.yaml -o dist/v1/openapi.yaml",
        "openapi:bundle:v1.1": "npx @redocly/cli bundle openapi/v1.1/openapi.yaml -o dist/v1.1/openapi.yaml",

        "docs:html:v1": "mkdir -p dist/v1 && cp templates/redoc.html dist/v1/index.html",
        "docs:html:v1.1": "mkdir -p dist/v1.1 && cp templates/redoc.html dist/v1.1/index.html",
        "docs:assets": "mkdir -p dist/assets && cp -r assets/* dist/assets/",

        "docs:build": "npm run openapi:bundle:v1 && npm run docs:html:v1 && npm run openapi:bundle:v1.1 && npm run docs:html:v1.1 && npm run docs:assets"
    }
}
